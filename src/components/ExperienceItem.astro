---
import { twMerge } from 'tailwind-merge';
interface Props {
  from: string;
  to: string;
  position: string;
  organization: string;
  organizationUrl?: string;
  description: string;
  skills: string[];
}

const { from, to, position, organization, organizationUrl, description, skills } =
  Astro.props;
---

<li class="mb-12 fade-in">
  <a
    href={organizationUrl}
    target="_blank"
    class={twMerge(
      'group relative grid pb-1 transition-all sm:grid-cols-8 sm:gap-8 md:gap-4 lg:hover:!opacity-100 lg:group-hover/list:opacity-50',
      organizationUrl ? 'cursor-pointer' : 'cursor-default',
    )}
  >
    <div
      class="absolute -inset-x-4 -inset-y-4 z-0 hidden rounded-md transition motion-reduce:transition-none lg:-inset-x-6 lg:block lg:group-hover:bg-slate-800/50 lg:group-hover:shadow-[inset_0_1px_0_0_rgba(148,163,184,0.1)] lg:group-hover:drop-shadow-lg"
    >
    </div>
    <span
      class="absolute -left-4 top-4 bottom-4 w-px bg-gradient-to-b from-transparent via-light-green to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 hidden lg:block"
    ></span>
    <header
      class="z-10 mb-2 mt-1 text-xs font-semibold uppercase tracking-wide text-slate-500 sm:col-span-2 flex items-start gap-2"
      aria-label={`${from} to ${to}`}
    >
      <span
        class="mt-1 h-1.5 w-1.5 shrink-0 rounded-full border border-slate-600 bg-dark-green group-hover:border-light-green group-hover:bg-light-green/20 transition-all duration-300 hidden sm:block"
      ></span>
      <span>{from} — {to}</span>
    </header><div class="z-10 sm:col-span-6">
      <h3 class="font-medium leading-snug text-slate-200">
        <div
          class="inline-flex items-baseline font-medium leading-tight text-slate-200 hover:text-light-green focus-visible:text-light-green group/link text-base"
        >
          <span
            class="absolute -inset-x-4 -inset-y-2.5 hidden rounded md:-inset-x-6 md:-inset-y-4 lg:block"
          ></span><span
            >{position} ·
            <span class="inline-block">{organization}</span></span
          >
        </div><div></div><p class="mt-2 text-sm leading-normal">
          {description}
        </p><ul class="mt-2 flex flex-wrap" aria-label="Technologies used">
          {
            skills.map((skill) => (
              <li class="mr-1.5 mt-2">
                <div class="skill-tag">{skill}</div>
              </li>
            ))
          }
        </ul>
      </h3>
    </div>
  </a>
</li>
